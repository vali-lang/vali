
// const:   {string_length:uint}-1-{unused 1}{...string bytes...}
// dynamic: {string_length:uint}-0-{age 1}-{...string bytes...}

pointer string {

    inline fn is_const() bool {
		// return @ptrv(this @as ptr + sizeof(uint), u8, 0) == 1#u8;
		return @ptrv(this @as ptr + sizeof(uint), u8, 0) == 1;
	}

    fn data() ptr {
        return this @as ptr + sizeof(uint) + 2;
    }
    fn bytes() uint {
		return @ptrv(this @as ptr, uint);
    }
}
