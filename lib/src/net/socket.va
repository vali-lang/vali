
header "sys" as sys;

use io;

class Socket {
    static fn new_tcp(host: String, port: u16, blocking: bool (true)) SocketTCP !init_error {
        return SocketTCP.new(host, port, blocking) ! { throw init_error }
    }

    static fn close(fd: uint) void {
        #if OS == win
        sys:closesocket(fd);
        #else
        io:close(fd);
        #end
    }
}
