
header "sys" as sys

fn exit(code: int) {
    sys:exit(code @as i32)
}
fn panic(msg: String) {
    println("PANIC: " + msg)
    sys:exit(1)
}

fn signal(sig: int, handler: fn(i32)(void)) void {
    sys:signal(sig @as i32, handler);
}

fn signal_ignore(sig: int) void {
    sys:signal(sig @as i32, null);
}

fn raise(sig: int) void {
    sys:raise(sig @as i32);
}